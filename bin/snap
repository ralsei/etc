#!/usr/bin/env racket
#lang racket/base
(require racket/cmdline)

(define (to-snap)
  (let ([randnum (random 2)]) ; non-inclusive upper bound
    (= randnum 1)))

(define file-to-snap
  (command-line
   #:program "snap"
   #:args (filename)
   filename))

(if (to-snap)
    (begin
      (displayln "You should have gone for the head.")
      (delete-file file-to-snap))
    (displayln "The hardest choices require the strongest wills."))
