#esac

BG="$(xrq background)"
FG="$(xrq foreground)"
BLK="$(xrq color0)"
HL="$(xrq color1)"
FONT="FiraCode 9"
PROMPT=">"
LINES=10
LH=20

bemenu -m -1 -n -p "$PROMPT" -l "$LINES" --fn "$FONT" -H "$LH" --scrollbar always \
    --tb "$HL" --tf "$BLK" --nb "$BG" --nf "$FG" \
    --hb "$BG" --hf "$HL" --fb "$BLK" --ff "$FG" \
    --scb "$BLK" --scf "$HL"
